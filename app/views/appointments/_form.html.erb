<%= simple_form_for(appointment) do |f| %>
  <%= f.association :patient, label: "Paciente" %>
  <%= f.association :doctor, label: "Médico" %>
  <%= f.input :starts_at, minute_step: 30, label: "Início da consulta" %>
  <% f.input :ends_at, minute_step: 30, label: "Término da consulta" %>
  <% if @appointment.new_record? %>
    <%= f.submit "Agendar", class: "btn-create-doctor" %>
  <% else %>
    <%= f.submit "Editar", class: "btn-create-doctor" %>
  <% end %>
<% end %>
